<div class="container mt-5">
  <h2 class="mb-4">Forgot your password?</h2>

  <div class="card">
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "mt-3" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="d-grid">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
