<div class="container my-4">
  <div class="p-5 mb-4 bg-light rounded-3">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">
        <%= @friend.first_name %>
        <%= @friend.last_name %>

      </h1>
      <p class="fs-4">
      <p>
      <strong>Email:</strong>
      <%= @friend.email %>
      </p>

      <p>
      <strong>Phone:</strong>
      <%= @friend.phone %>
      </p>

      <p>
      <strong>Twitter:</strong>
      <%= @friend.twitter %>
      </p>
      </p>
      <div class="d-flex gap-2">
      <%= link_to "Back to friends", friends_path, class: "btn btn-secondary" %>
      <%= link_to "Edit this friend", edit_friend_path(@friend), class: "btn btn-warning" %>
      <%= button_to "Destroy this friend", @friend, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
        </div>
  </div>



